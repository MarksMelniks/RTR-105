#include <stdio.h>
#include <math.h>

int main(){

char d;
int a,b,c;
long long k,l,m;
c=b=1;
m=l=1;
printf("Ievadiet skaitli int datatipam \n");
scanf("%d" , &a);
printf("Ievadiet skaitli long long datatipam \n");
scanf("%lld" , &k);
//printf("Ievadiet skaitli char datatipam \n");
//scanf("%c" , &d);

  if(a!=fabs(a) || a>12)
   {
    printf("Pareizi apreiķināt faktoriālu ievadītam skaitlim int datatipam nav iespējams\n");
   }
    else
     {
      while(b<=a)
       {
        c=c*b;
        b=b+1;
       }
      printf("Faktoriāla vērtība int datatipam ir: %d\n",c); 
     }
     
     
  if(k!=fabs(k) || k>20)
   {
    printf("Pareizi apreiķināt faktoriālu ievadītam skaitlim long long datatipam nav iespējams\n");
   }
    else
     {
      while(l<=k)
       {
        m=m*l;
        l=l+1;
       }
      printf("Faktoriāla vērtība long long datatipam ir: %lld\n",m); 
     }
     
  if(1)
   {
    printf("Apreiķināt faktoriālu char datatipam nav iespējams\n");
   }
 
return 0;
}
